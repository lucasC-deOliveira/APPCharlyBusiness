<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/lightBlack"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkGreen"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNomeProduto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="5"
            android:background="@color/darkGreen"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nome"
            android:textAlignment="center"
            android:textColor="@color/primaryGreen"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/pading"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:background="@color/darkGreen"
            android:orientation="horizontal"></LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProdutoAdapter3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/darkGreen"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_photo_24"
            app:civ_border_color="@color/primaryGreen"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="6"
            android:alpha="1"
            android:background="@color/darkGreen"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonEditAdapter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@color/darkGreen"
                android:backgroundTint="@color/darkGreen"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/imageButtonRemoveAdapter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@color/darkGreen"
                app:srcCompat="@drawable/ic_baseline_delete_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/superlightBlack"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkGreen"
                android:gravity="right"
                android:text="PreÃ§o/KG:"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textPrecoProduto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkGreen"
                android:gravity="left"
                android:paddingStart="5dp"
                android:text="Valor"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="5"
            android:background="@color/primaryGreen"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>